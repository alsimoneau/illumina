if [ ! -d bin ]
then mkdir bin
fi

firstLine=`head -1 illum/__init__.py`
version=${firstLine:15:-1}

F77="gfortran"
folder=`pwd`
chmod a+x bin/*

# options de debuggage -Wall -fcheck=all -g -fbacktrace -ffpe-trap=zero
echo $F77" -Wunused-parameter -mcmodel=medium -O3 illum/kernel/illum-health.f90 illum/kernel/angle3points.f illum/kernel/anglesolide.f illum/kernel/anglezenithal.f illum/kernel/angleazimutal.f illum/kernel/horizon.f90 illum/kernel/twodin.f90 illum/kernel/transTOA.f illum/kernel/transmitm.f illum/kernel/transmita.f illum/kernel/transmitl.f illum/kernel/molabs.f illum/kernel/curvature.f -o bin/illum-health"
$F77 -Wunused-parameter -mcmodel=medium -O3 illum/kernel/illum-health.f90 illum/kernel/angle3points.f illum/kernel/anglesolide.f illum/kernel/anglezenithal.f illum/kernel/angleazimutal.f illum/kernel/horizon.f90 illum/kernel/twodin.f90 illum/kernel/transTOA.f illum/kernel/transmitm.f illum/kernel/transmita.f illum/kernel/transmitl.f illum/kernel/molabs.f illum/kernel/curvature.f -o bin/illum-health

chmod a+x bin/*
chmod a+x *.bash
