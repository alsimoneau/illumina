if [ ! -d bin ]
then mkdir bin
fi

firstLine=`head -1 illum/__init__.py`
version=${firstLine:15:-1}

f2py3 -c -DF2PY_REPORT_ON_ARRAY_COPY=1 illum/compute/*.f95 -m compute
mkdir -p illum/compute
mv compute.*.so illum/compute/

F77="gfortran"
folder=`pwd`
chmod a+x bin/*

# options de debuggage -Wall -fcheck=all -g -fbacktrace -ffpe-trap=zero
echo $F77" -Wunused-parameter -mcmodel=medium -O3 illum/kernel/illumina.f illum/kernel/zone_diffusion.f illum/kernel/diffusion.f illum/kernel/angle3points.f illum/kernel/anglesolide.f illum/kernel/transmita.f illum/kernel/transmitm.f illum/kernel/transmitl.f illum/kernel/anglezenithal.f illum/kernel/angleazimutal.f illum/kernel/horizon.f illum/kernel/cloudreflectance.f  illum/kernel/twodin.f illum/kernel/twodout.f illum/kernel/transTOA.f illum/kernel/curvature.f illum/kernel/molabs.f -o bin/illumina"
sed -i "s/__version__/$version/" illum/kernel/illumina.f
$F77 -Wunused-parameter -mcmodel=medium -O3 illum/kernel/illumina.f illum/kernel/zone_diffusion.f illum/kernel/diffusion.f illum/kernel/angle3points.f illum/kernel/anglesolide.f illum/kernel/transmita.f illum/kernel/transmitm.f illum/kernel/transmitl.f illum/kernel/anglezenithal.f illum/kernel/angleazimutal.f illum/kernel/horizon.f illum/kernel/cloudreflectance.f  illum/kernel/twodin.f illum/kernel/twodout.f illum/kernel/transTOA.f illum/kernel/curvature.f illum/kernel/molabs.f -o bin/illumina
sed -i "s/$version/__version__/" illum/kernel/illumina.f
echo $F77" illum/kernel/continue_illumina.f -o bin/continue_illumina"
$F77 illum/kernel/continue_illumina.f -o bin/continue_illumina
chmod a+x bin/*
chmod a+x *.bash
