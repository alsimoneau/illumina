if [ ! -d bin ]
then mkdir bin
fi

firstLine=`head -1 illum/__init__.py`
version=${firstLine:15:-1}

F77="gfortran"
folder=`pwd`
chmod a+x make*

# options de debuggage -Wall -fcheck=all -g -fbacktrace -ffpe-trap=zero
echo $F77" -Wunused-parameter -mcmodel=medium -O3 kernel/illum-health.f90 kernel/angle3points.f kernel/anglesolide.f kernel/anglezenithal.f kernel/angleazimutal.f kernel/horizon.f kernel/twodin.f -o bin/illumina-health"
$F77 -Wunused-parameter -mcmodel=medium -O3 kernel/illum-health.f90 kernel/angle3points.f kernel/anglesolide.f kernel/anglezenithal.f kernel/angleazimutal.f kernel/horizon.f kernel/twodin.f kernel/transTOA.f kernel/transmitm.f kernel/transmita.f kernel/transmitl.f kernel/molabs.f kernel/curvature.f -o bin/illum-health
# sed -i "s/$version/__version__/" kernel/illum-health.f90
chmod a+x bin/*
chmod a+x *.bash
